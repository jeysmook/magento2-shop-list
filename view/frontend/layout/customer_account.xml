<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Jeysmook\ShopList\Block\Customer\Account\Link" name="shop.list.link">
                <arguments>
                    <argument name="path" xsi:type="string">shoppinglist</argument>
                    <argument name="label" xsi:type="string">My Shopping Lists</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
